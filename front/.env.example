# Environment Variables Example
# Copy this file to .env.local for local development

# API Configuration
# For production deployment, set this in Vercel environment variables
NEXT_PUBLIC_USER_CENTER_URL=https://user-center.ravey.site
NEXT_PUBLIC_APP_BACKEND_URL=https://membuddy-back.ravey.site/api

# Local development (default)
# NEXT_PUBLIC_USER_CENTER_URL=http://localhost:8080
# NEXT_PUBLIC_APP_BACKEND_URL=http://localhost:8000/api

# WeChat Configuration
# Replace with your actual WeChat App IDs
NEXT_PUBLIC_WECHAT_MP_APP_ID=your_wechat_mp_app_id
NEXT_PUBLIC_WECHAT_MINI_APP_ID=your_wechat_mini_app_id

# WeChat Redirect URL
# For development: http://localhost:3000/auth/wechat/callback
# For production: https://your-domain.com/auth/wechat/callback
NEXT_PUBLIC_WECHAT_REDIRECT_URL=http://localhost:3000/auth/wechat/callback
