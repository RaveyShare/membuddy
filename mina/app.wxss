/**app.wxss**/
/* ===== MemBuddy 微信小程序全局样式 ===== */

/* 引入完整样式系统 */
@import "styles/index.wxss";

/* ===== 应用级别的全局样式 ===== */

/* 应用主题配置 */
page {
  /* 应用默认为深色主题 */
  background: var(--bg-primary, #0f0f23);
  color: var(--text-primary, #ffffff);
  
  /* 字体配置 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  
  /* 平滑滚动 */
  scroll-behavior: smooth;
  
  /* 字体渲染优化 */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  
  /* 禁用用户选择（可选） */
  -webkit-user-select: none;
  user-select: none;
}

/* ===== 应用特定的样式覆盖 ===== */

/* 微信小程序特定的样式调整 */

/* 导航栏适配 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: var(--bg-primary);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid var(--border-primary);
}

/* 页面内容区域 */
.page-content {
  min-height: 100vh;
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 底部安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部安全区域 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 微信小程序特定的交互样式 */

/* 按钮点击反馈 */
button::after {
  border: none;
}

/* 表单元素样式重置 */
input, textarea {
  background: transparent;
  border: none;
  outline: none;
}

/* 滚动视图样式 */
scroll-view {
  height: 100%;
}

/* 图片加载优化 */
image {
  display: block;
  max-width: 100%;
  height: auto;
}

/* 文本选择样式 */
::selection {
  background: var(--selection-bg, rgba(102, 126, 234, 0.2));
  color: var(--selection-text, var(--gray-900));
}

/* ===== 应用级别的动画配置 ===== */

/* 页面切换动画 */
.page-enter {
  animation: pageEnter 300ms ease-out;
}

.page-exit {
  animation: pageExit 300ms ease-in;
}

@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateX(100%);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes pageExit {
  from {
    opacity: 1;
    transform: translateX(0);
  }
  to {
    opacity: 0;
    transform: translateX(-100%);
  }
}

/* 模态框动画 */
.modal-enter {
  animation: modalEnter 250ms ease-out;
}

.modal-exit {
  animation: modalExit 250ms ease-in;
}

@keyframes modalEnter {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

@keyframes modalExit {
  from {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
  to {
    opacity: 0;
    transform: scale(0.9) translateY(50rpx);
  }
}

/* ===== 应用级别的工具类 ===== */

/* 快速布局 */
.app-container {
  width: 100%;
  min-height: 100vh;
  padding: 0 32rpx;
}

.app-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: var(--bg-primary);
  backdrop-filter: blur(20px);
  border-bottom: 1rpx solid var(--border-primary);
}

.app-main {
  flex: 1;
  padding: 32rpx 0;
}

.app-footer {
  margin-top: auto;
  padding: 32rpx 0;
  border-top: 1rpx solid var(--border-primary);
}

/* 快速间距 */
.app-section {
  margin-bottom: 48rpx;
}

.app-section:last-child {
  margin-bottom: 0;
}

/* 快速文本样式 */
.app-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.app-subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
}

/* 状态指示器 */
.status-online {
  position: relative;
}

.status-online::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 12rpx;
  height: 12rpx;
  background: var(--success-500);
  border-radius: 50%;
  border: 2rpx solid var(--bg-primary);
}

/* 加载状态 */
.app-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  color: var(--text-secondary);
}

/* 错误状态 */
.app-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200rpx;
  color: var(--error-500);
  text-align: center;
}

/* 空状态 */
.app-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* ===== 调试模式样式 ===== */

/* 开发环境下的调试工具 */
.debug-info {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  z-index: 9999;
  opacity: 0.7;
}

/* 性能监控 */
.perf-monitor {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 12rpx;
  border-radius: 6rpx;
  font-size: 18rpx;
  z-index: 9999;
  opacity: 0.7;
}