/* components/ui/card/card.wxss */

/* 基础卡片样式 */
.card {
  display: block;
  width: 100%;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 卡片变体 */
.card-default {
  background: rgba(255, 255, 255, 0.05);
  color: #ffffff;
}

.card-glass {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  color: #ffffff;
}

.card-solid {
  background: #1a1a1a;
  color: #ffffff;
}

/* 圆角样式 */
.card-rounded-sm {
  border-radius: 8rpx;
}

.card-rounded-default {
  border-radius: 16rpx;
}

.card-rounded-lg {
  border-radius: 24rpx;
}

.card-rounded-xl {
  border-radius: 32rpx;
}

/* 阴影样式 */
.card-shadow {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 边框样式 */
.card-border {
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* 可点击样式 */
.card-clickable {
  cursor: pointer;
}

.card-clickable:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.card-clickable:hover {
  border-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.4);
}

/* 卡片头部 */
.card-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 48rpx;
}

.card-title {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 1.2;
  color: #ffffff;
}

.card-description {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

/* 卡片内容 */
.card-content {
  padding: 48rpx;
  padding-top: 0;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  align-items: center;
  padding: 48rpx;
  padding-top: 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .card-header,
  .card-content,
  .card-footer {
    padding: 32rpx;
  }
  
  .card-content {
    padding-top: 0;
  }
  
  .card-footer {
    padding-top: 0;
  }
  
  .card-title {
    font-size: 40rpx;
  }
  
  .card-description {
    font-size: 26rpx;
  }
}

/* 特殊效果 */
.card-glass::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

.card-glass::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 1px;
  bottom: 0;
  background: linear-gradient(180deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

/* 动画效果 */
@keyframes card-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card {
  animation: card-fade-in 0.5s ease-out;
}

/* 卡片组合样式 */
.card + .card {
  margin-top: 24rpx;
}

/* 卡片内部元素间距 */
.card-header + .card-content {
  padding-top: 0;
}

.card-content + .card-footer {
  padding-top: 0;
}