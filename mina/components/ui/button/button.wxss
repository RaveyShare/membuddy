/* components/ui/button/button.wxss */

/* 基础按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  white-space: nowrap;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

/* 按钮变体样式 */
.btn-default {
  background: linear-gradient(135deg, #22d3ee 0%, #06b6d4 100%);
  color: #000000;
}

.btn-default:active {
  background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
}

.btn-destructive {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #ffffff;
}

.btn-destructive:active {
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.3);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
}

.btn-ghost {
  background: transparent;
  color: #ffffff;
}

.btn-ghost:active {
  background: rgba(255, 255, 255, 0.1);
}

.btn-link {
  background: transparent;
  color: #22d3ee;
  text-decoration: underline;
  text-underline-offset: 8rpx;
}

.btn-link:active {
  color: #06b6d4;
}

/* 按钮尺寸样式 */
.btn-default-size {
  height: 80rpx;
  padding: 0 32rpx;
}

.btn-sm {
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
}

.btn-lg {
  height: 88rpx;
  padding: 0 64rpx;
  font-size: 30rpx;
  border-radius: 14rpx;
}

.btn-icon {
  height: 80rpx;
  width: 80rpx;
  padding: 0;
}

/* 按钮状态样式 */
.btn-disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn-loading {
  pointer-events: none;
}

/* 加载动画 */
.btn-loading-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 图标样式 */
.btn-icon-left,
.btn-icon-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon-left {
  margin-right: 8rpx;
}

.btn-icon-right {
  margin-left: 8rpx;
}

.iconfont {
  font-size: 32rpx;
}

/* 按钮内容 */
.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .btn {
    font-size: 26rpx;
  }
  
  .btn-default-size {
    height: 76rpx;
    padding: 0 28rpx;
  }
  
  .btn-sm {
    height: 68rpx;
    padding: 0 20rpx;
    font-size: 24rpx;
  }
  
  .btn-lg {
    height: 84rpx;
    padding: 0 56rpx;
    font-size: 28rpx;
  }
  
  .btn-icon {
    height: 76rpx;
    width: 76rpx;
  }
}

/* 特殊效果 */
.btn:not(.btn-disabled):not(.btn-loading):active {
  transform: scale(0.98);
}

/* 渐变动画 */
.btn-default,
.btn-destructive {
  background-size: 200% 200%;
  animation: gradient-shift 3s ease infinite;
}

@keyframes gradient-shift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}