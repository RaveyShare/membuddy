<!-- components/ui/button/button.wxml -->
<button 
  class="{{computedClass}}"
  disabled="{{disabled || loading}}"
  bindtap="handleTap"
  bindlongpress="handleLongPress"
  bindtouchstart="handleTouchStart"
  bindtouchend="handleTouchEnd"
>
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="btn-loading-icon">
    <view class="loading-spinner"></view>
  </view>
  
  <!-- 左侧图标 -->
  <view wx:if="{{icon && iconPosition === 'left' && !loading}}" class="btn-icon-left">
    <text class="iconfont {{icon}}"></text>
  </view>
  
  <!-- 按钮文本内容 -->
  <view class="btn-content">
    <slot wx:if="{{!text}}"></slot>
    <text wx:else>{{text}}</text>
  </view>
  
  <!-- 右侧图标 -->
  <view wx:if="{{icon && iconPosition === 'right' && !loading}}" class="btn-icon-right">
    <text class="iconfont {{icon}}"></text>
  </view>
</button>