/* components/loading-spinner/loading-spinner.wxss */
.loading-spinner {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.spinner-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(20rpx);
  padding: 60rpx;
  margin: 40rpx;
  max-width: 600rpx;
}

.spinner-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.icon-container {
  position: relative;
  margin-bottom: 40rpx;
}

.brain-icon {
  font-size: 80rpx;
  animation: pulse 2s infinite;
}

.loading-icon {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  font-size: 40rpx;
  animation: spin 1s linear infinite;
}

.text-container {
  margin-bottom: 40rpx;
}

.main-message {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.sub-message {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
}

.dots-container {
  display: flex;
  gap: 16rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out;
}

.dot-1 {
  background-color: #22d3ee;
  animation-delay: -0.32s;
}

.dot-2 {
  background-color: #8b5cf6;
  animation-delay: -0.16s;
}

.dot-3 {
  background-color: #f472b6;
}

/* 动画定义 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}