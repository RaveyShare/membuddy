/* components/auth-guard/auth-guard.wxss */

.auth-guard-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: var(--bg-primary);
  position: relative;
  overflow: hidden;
}

.auth-guard-modern::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-gradient-1);
  animation: backgroundShift 15s ease-in-out infinite;
  z-index: -1;
}

/* 检查中状态 */
.auth-checking-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur));
  border-radius: var(--border-radius-lg);
  border: var(--glass-border);
  box-shadow: var(--shadow-lg);
  animation: fadeInUp 0.6s ease-out;
}

.loading-spinner-modern {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-gradient);
  border-radius: 50%;
  margin-bottom: 30rpx;
  position: relative;
}

.loading-spinner-modern::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border-radius: 50%;
  border: 2rpx solid transparent;
  border-top: 2rpx solid var(--secondary-gradient);
  animation: spinReverse 2s linear infinite;
}

.loading-text-modern {
  color: var(--text-primary);
  font-size: var(--font-size-base);
  font-weight: 500;
  opacity: 0.9;
  animation: pulse 2s ease-in-out infinite;
}

/* 已认证内容 */
.auth-content {
  width: 100%;
  height: 100%;
}

/* 登录提示 */
.auth-login-prompt-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.prompt-container-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 60rpx;
  background: var(--glass-bg);
  backdrop-filter: blur(var(--glass-blur));
  border-radius: var(--border-radius-lg);
  border: var(--glass-border);
  box-shadow: var(--shadow-lg);
  max-width: 600rpx;
  width: 100%;
  animation: fadeInUp 0.8s ease-out;
}

.prompt-icon-modern {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.9;
  animation: bounce 2s ease-in-out infinite;
}

.prompt-title-modern {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  text-align: center;
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.prompt-text-modern {
  font-size: var(--font-size-base);
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.6;
  opacity: 0.9;
}

.login-btn-modern {
  background: var(--primary-gradient);
  color: var(--text-primary);
  border: none;
  padding: 24rpx 48rpx;
  border-radius: var(--border-radius-round);
  font-size: var(--font-size-base);
  font-weight: 500;
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn-modern::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.login-btn-modern:hover::before {
  left: 100%;
}

.login-btn-modern:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-lg);
}

.login-btn-modern:active {
  transform: translateY(0);
}

/* 动画效果 */
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes spinReverse {
  from { transform: rotate(360deg); }
  to { transform: rotate(0deg); }
}

.animate-spin-modern {
  animation: spin 1s linear infinite;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

@keyframes pulse {
  0%, 100% { opacity: 0.9; }
  50% { opacity: 0.6; }
}

@keyframes backgroundShift {
  0%, 100% {
    background: var(--bg-gradient-1);
  }
  50% {
    background: var(--bg-gradient-2);
  }
}