/* pages/review/index.wxss */

/* 页面容器 */
.review-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.back-btn {
  display: flex;
  align-items: center;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: white;
}

.loading-text {
  margin-top: 32rpx;
  font-size: 32rpx;
  opacity: 0.8;
}

/* 内容区域 */
.content-section {
  margin: 32rpx;
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

/* 记忆项目信息 */
.item-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

.content-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 32rpx;
  line-height: 1.6;
  background: #f9fafb;
  margin-bottom: 32rpx;
}

.content-textarea:focus {
  border-color: #667eea;
  background: white;
}

/* AI记忆辅助 */
.memory-aids {
  margin-top: 32rpx;
}

.aids-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.aids-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.aids-content {
  background: #f0f9ff;
  border: 2rpx solid #e0f2fe;
  border-radius: 16rpx;
  padding: 24rpx;
}

.aids-item {
  margin-bottom: 24rpx;
}

.aids-item:last-child {
  margin-bottom: 0;
}

.aids-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #0369a1;
  margin-bottom: 8rpx;
}

.aids-text {
  font-size: 30rpx;
  color: #374151;
  line-height: 1.5;
}

/* 复习状态 */
.status-section {
  margin: 32rpx;
}

.status-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.current-status {
  border-left: 8rpx solid #10b981;
}

.update-status {
  border-left: 8rpx solid #667eea;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.status-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.status-label {
  font-size: 30rpx;
  color: #6b7280;
}

.status-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #1a1a1a;
}

/* 掌握度滑块 */
.mastery-container {
  margin-bottom: 32rpx;
}

.mastery-label {
  font-size: 30rpx;
  color: #374151;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mastery-value {
  font-weight: 600;
  color: #667eea;
}

.mastery-slider {
  margin-bottom: 16rpx;
}

.mastery-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 难度选择 */
.difficulty-container {
  margin-bottom: 32rpx;
}

.difficulty-label {
  font-size: 30rpx;
  color: #374151;
  margin-bottom: 16rpx;
}

.difficulty-options {
  display: flex;
  gap: 16rpx;
}

.difficulty-option {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #6b7280;
  background: white;
  transition: all 0.2s;
}

.difficulty-option.active {
  border-color: #667eea;
  background: #667eea;
  color: white;
}

/* 日期时间选择 */
.datetime-container {
  margin-bottom: 32rpx;
}

.datetime-label {
  font-size: 30rpx;
  color: #374151;
  margin-bottom: 16rpx;
}

.datetime-picker {
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  background: #f9fafb;
  font-size: 30rpx;
  color: #374151;
}

/* 分类选择 */
.category-container {
  margin-bottom: 32rpx;
}

.category-label {
  font-size: 30rpx;
  color: #374151;
  margin-bottom: 16rpx;
}

.category-picker {
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  background: #f9fafb;
  font-size: 30rpx;
  color: #374151;
}

/* 标签管理 */
.tags-container {
  margin-bottom: 32rpx;
}

.tags-label {
  font-size: 30rpx;
  color: #374151;
  margin-bottom: 16rpx;
}

.tag-input-container {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.tag-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #f9fafb;
}

.tag-input:focus {
  border-color: #667eea;
  background: white;
}

.add-tag-btn {
  padding: 20rpx 32rpx;
  background: #667eea;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.add-tag-btn:active {
  background: #5a67d8;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: #e0f2fe;
  color: #0369a1;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.tag-text {
  margin-right: 8rpx;
}

.tag-remove {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 完成按钮 */
.complete-btn {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.complete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
}

.complete-btn.submitting {
  background: #9ca3af;
  box-shadow: none;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .content-section,
  .status-card {
    margin: 24rpx;
    padding: 32rpx;
  }
  
  .difficulty-options {
    flex-direction: column;
  }
  
  .tag-input-container {
    flex-direction: column;
  }
}