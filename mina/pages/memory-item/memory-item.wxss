/* pages/memory-item/memory-item.wxss */

.memory-item-container {
  min-height: 100vh;
  background: var(--bg-primary);
}

/* 加载状态 */
.loading-container {
  padding: var(--spacing-lg);
}

.loading-content {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1px solid var(--border-color);
}

.loading-title,
.loading-text,
.loading-meta {
  height: 16px;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: var(--radius-sm);
  margin-bottom: var(--spacing-sm);
}

.loading-title {
  width: 60%;
  height: 20px;
}

.loading-text {
  width: 100%;
}

.loading-meta {
  width: 40%;
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 内容容器 */
.content-container {
  padding: var(--spacing-lg);
}

/* 头部操作栏 */
.header-actions {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  border: 1px solid var(--border-color);
}

.action-group {
  display: flex;
  gap: var(--spacing-sm);
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
  transition: all 0.2s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.danger {
  background: #fee;
  border-color: #fcc;
  color: #c53030;
}

.action-btn .icon {
  font-size: var(--text-lg);
}

.action-text {
  font-size: var(--text-xs);
  color: var(--text-secondary);
}

.action-btn.danger .action-text {
  color: #c53030;
}

/* 查看模式 */
.view-mode {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

/* 记忆项卡片 */
.memory-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1px solid var(--border-color);
}

.memory-header {
  margin-bottom: var(--spacing-lg);
}

.memory-title {
  font-size: var(--text-xl);
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.4;
  display: block;
  margin-bottom: var(--spacing-sm);
}

.memory-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.meta-item {
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

.meta-separator {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  opacity: 0.5;
}

.memory-content {
  margin-bottom: var(--spacing-lg);
}

.content-text {
  font-size: var(--text-base);
  color: var(--text-primary);
  line-height: 1.6;
  white-space: pre-wrap;
}

.memory-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-lg);
}

.tag {
  font-size: var(--text-xs);
  color: var(--primary-color);
  background: rgba(99, 102, 241, 0.1);
  padding: 4px var(--spacing-sm);
  border-radius: var(--radius-sm);
}

.memory-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--border-color);
}

.update-time {
  font-size: var(--text-xs);
  color: var(--text-secondary);
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  border: 1px solid var(--border-color);
}

.copy-btn .icon {
  font-size: var(--text-sm);
}

.copy-text {
  font-size: var(--text-xs);
  color: var(--text-secondary);
}

/* 记忆辅助工具 */
.memory-aids-section {
  background: white;
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--border-color);
}

.section-title {
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.generate-btn {
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--primary-color);
  color: white;
  border-radius: var(--radius-md);
  font-size: var(--text-sm);
}

/* 无记忆辅助状态 */
.no-aids {
  text-align: center;
  padding: var(--spacing-xl);
}

.no-aids-icon {
  font-size: 48px;
  margin-bottom: var(--spacing-md);
}

.no-aids-title {
  display: block;
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.no-aids-desc {
  display: block;
  font-size: var(--text-base);
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 生成中状态 */
.generating-state {
  text-align: center;
  padding: var(--spacing-xl);
}

.generating-icon {
  font-size: 48px;
  margin-bottom: var(--spacing-md);
  animation: pulse 2s infinite;
}

.generating-text {
  font-size: var(--text-base);
  color: var(--text-secondary);
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 记忆辅助内容 */
.aids-content {
  padding: var(--spacing-lg);
}

.aid-section {
  margin-bottom: var(--spacing-lg);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.aid-section:last-child {
  margin-bottom: 0;
}

.aid-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
}

.aid-title {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
}

.toggle-icon {
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

.aid-content {
  padding: var(--spacing-md);
}

/* 思维导图 */
.mind-map {
  margin-bottom: var(--spacing-md);
}

.central-node {
  text-align: center;
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--primary-color);
  background: rgba(99, 102, 241, 0.1);
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-lg);
}

.branches {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.branch {
  border-left: 3px solid var(--primary-color);
  padding-left: var(--spacing-md);
}

.branch-topic {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.sub-branches {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
  margin-left: var(--spacing-md);
}

.sub-branch {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  padding: var(--spacing-xs);
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
}

/* 关键原理 */
.principle-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.principle-item:last-child {
  margin-bottom: 0;
}

.principle-title {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.principle-explanation {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  line-height: 1.5;
  display: block;
  margin-bottom: var(--spacing-sm);
}

.principle-example {
  font-size: var(--text-sm);
  color: var(--primary-color);
  font-style: italic;
  display: block;
}

/* 记忆场景 */
.scene-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.scene-item:last-child {
  margin-bottom: 0;
}

.scene-title {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.scene-description {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  line-height: 1.5;
  display: block;
  margin-bottom: var(--spacing-sm);
}

.scene-connection {
  font-size: var(--text-sm);
  color: var(--primary-color);
  display: block;
}

/* 记忆法 */
.mnemonic-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.mnemonic-item:last-child {
  margin-bottom: 0;
}

.mnemonic-technique {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.mnemonic-application {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  line-height: 1.5;
  display: block;
}

/* 感官联想 */
.sensory-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
}

.sensory-item:last-child {
  margin-bottom: 0;
}

.sensory-type {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.sensory-description {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  line-height: 1.5;
  display: block;
}

/* 编辑模式 */
.edit-mode {
  background: white;
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
}

.edit-form {
  padding: var(--spacing-lg);
}

.form-group {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  font-size: var(--text-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.add-tag-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  background: var(--primary-color);
  color: white;
  border-radius: var(--radius-sm);
  font-size: var(--text-sm);
}

.add-icon {
  font-size: var(--text-sm);
  font-weight: 600;
}

.add-text {
  font-size: var(--text-xs);
}

.form-input,
.form-textarea {
  width: 100%;
  padding: var(--spacing-md);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: var(--text-base);
  color: var(--text-primary);
  background: white;
}

.form-textarea {
  min-height: 120px;
  resize: vertical;
}

.form-picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  background: white;
}

.picker-text {
  font-size: var(--text-base);
  color: var(--text-primary);
}

.picker-arrow {
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

.tag-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  background: rgba(99, 102, 241, 0.1);
  border: 1px solid rgba(99, 102, 241, 0.2);
  border-radius: var(--radius-sm);
}

.tag-text {
  font-size: var(--text-sm);
  color: var(--primary-color);
}

.remove-icon {
  font-size: var(--text-sm);
  color: var(--text-secondary);
  font-weight: 600;
}

.form-actions {
  margin-top: var(--spacing-xl);
}

.save-btn {
  width: 100%;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  font-size: var(--text-base);
  font-weight: 600;
}

.save-btn:disabled {
  background: var(--text-secondary);
  opacity: 0.6;
}