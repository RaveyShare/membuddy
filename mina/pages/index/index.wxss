/***********************************************
 * 首页深色主题样式
 * 现代简约设计，玻璃拟态效果
 ***********************************************/

/* 导入现代主题样式 */
@import "./index-modern.wxss";

/* 头部区域 */
.header-section {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
  position: relative;
  z-index: 2;
  animation: fadeInDown 1s ease-out;
}

@keyframes fadeInDown {
  0% {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.app-title {
  flex: 1;
}

.title-text {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 2rpx;
  background: linear-gradient(45deg, #ffffff, #f0f8ff);
  -webkit-background-clip: text;
  background-clip: text;
  color: white;
  animation: titleGlow 3s ease-in-out infinite;
}

@keyframes titleGlow {
  0%, 100% {
    text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4);
  }
  50% {
    text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.4), 0 0 20rpx rgba(255, 255, 255, 0.3);
  }
}

.subtitle-text {
  font-size: 30rpx;
  opacity: 0.95;
  font-weight: 300;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-left: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

.user-level {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

/* 今日统计 */
.today-stats {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
}

.stats-grid {
  display: flex;
  align-items: center;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: white;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
  color: white;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 主要内容区域 */
.main-content {
  padding: 0 30rpx;
  padding-bottom: 140rpx;
  position: relative;
  z-index: 2;
  animation: fadeInUp 1.2s ease-out 0.3s both;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 快速复习卡片 */
.quick-review-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.review-title {
  font-size: 32rpx;
  font-weight: 600;
}

.review-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  font-size: 24rpx;
  color: white;
}

.review-content {
  padding: 30rpx;
}

.memory-question {
  margin-bottom: 30rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
  line-height: 1.5;
}

.review-actions {
  text-align: center;
}

.show-answer-btn {
  background: #667eea;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.answer-section {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.memory-answer {
  margin-bottom: 30rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.answer-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}

.difficulty-rating {
  text-align: center;
}

.rating-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.rating-buttons {
  display: flex;
  gap: 16rpx;
  justify-content: center;
}

.rating-btn {
  flex: 1;
  max-width: 160rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.rating-btn.easy {
  background: #10b981;
  color: white;
}

.rating-btn.normal {
  background: #f59e0b;
  color: white;
}

.rating-btn.hard {
  background: #ef4444;
  color: white;
}

/* 记忆输入区域 */
.input-section {
  margin-bottom: 20rpx;
}

.input-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.input-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.input-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.input-content {
  padding: 30rpx;
}

.memory-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: #f8f9fa;
  margin-bottom: 24rpx;
}

.input-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
}

.save-btn {
  background: #10b981;
  color: white;
}

.save-btn[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}

.generate-btn {
  background: #667eea;
  color: white;
}

.generate-btn[disabled] {
  background: #d1d5db;
  color: #9ca3af;
}

/* 记忆辅助预览 */
.aids-preview {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
}

.preview-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.aids-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  gap: 20rpx;
}

.aid-item {
  flex: 0 0 calc(50% - 10rpx);
  padding: 24rpx;
  border: 2rpx solid #e1e5e9;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.2s;
}

.aid-item:active {
  background: #f8f9fa;
  border-color: #667eea;
}

.aid-icon {
  margin-bottom: 12rpx;
}

.aid-icon .icon-text {
  font-size: 40rpx;
}

.aid-label {
  font-size: 24rpx;
  color: #374151;
  font-weight: 500;
}

.preview-tip {
  padding: 20rpx 30rpx 30rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 功能卡片 */
.features-section {
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 32rpx;
  padding: 0 40rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 40rpx;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.8), transparent);
  border-radius: 2rpx;
}

.section-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.action-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.features-grid {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 功能卡片 */
.feature-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 28rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15), 
              0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform: translateY(0);
  animation: cardSlideIn 0.8s ease-out both;
}

@keyframes cardSlideIn {
  0% {
    opacity: 0;
    transform: translateY(30rpx) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.feature-card:nth-child(1) { animation-delay: 0.1s; }
.feature-card:nth-child(2) { animation-delay: 0.2s; }
.feature-card:nth-child(3) { animation-delay: 0.3s; }
.feature-card:nth-child(4) { animation-delay: 0.4s; }

.feature-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12), 
              0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-icon {
  width: 88rpx;
  height: 88rpx;
  margin: 0 auto 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4),
              0 4rpx 12rpx rgba(118, 75, 162, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

.feature-card:active .card-icon {
  transform: scale(0.95);
}

.feature-icon .icon-text {
  font-size: 36rpx;
}

.feature-info {
  flex: 1;
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 20rpx;
  text-align: center;
  letter-spacing: 0.5rpx;
}

.card-description {
  font-size: 28rpx;
  color: #4a5568;
  text-align: center;
  line-height: 1.7;
  font-weight: 400;
  opacity: 0.9;
}

.feature-arrow {
  margin-left: 16rpx;
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
}

/* 最近记忆区域 */
.recent-section {
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 2;
  animation: fadeInUp 1s ease-out 0.6s both;
}

.recent-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.recent-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-item:active {
  background: #f8f9fa;
}

.memory-content {
  margin-bottom: 16rpx;
}

.memory-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.5;
  letter-spacing: 0.5rpx;
}

.memory-preview {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.memory-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.memory-category {
  font-size: 22rpx;
  color: white;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.memory-time {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  font-size: 34rpx;
  font-weight: 700;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4),
              0 4rpx 12rpx rgba(118, 75, 162, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 1rpx;
  position: relative;
  overflow: hidden;
}

.login-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.login-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3),
              0 2rpx 8rpx rgba(118, 75, 162, 0.15);
}

.login-button:active::before {
  left: 100%;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.08);
  padding: 20rpx 0 env(safe-area-inset-bottom);
  z-index: 1000;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.nav-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 20rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  position: relative;
}

.nav-item:active {
  transform: scale(0.95);
  background: rgba(102, 126, 234, 0.1);
}

.nav-icon {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item:active .nav-icon {
  transform: scale(1.1);
}

.nav-text {
  font-size: 22rpx;
  color: #4a5568;
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-item:active .nav-text {
  color: #667eea;
}

/* 加载状态 */
.loading-recent {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.loading-memory-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.loading-memory-item:last-child {
  border-bottom: none;
}

.loading-title {
  height: 36rpx;
  background: #f0f0f0;
  border-radius: 18rpx;
  margin-bottom: 12rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.loading-content {
  height: 28rpx;
  background: #f0f0f0;
  border-radius: 14rpx;
  margin-bottom: 16rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.loading-meta {
  height: 24rpx;
  width: 60%;
  background: #f0f0f0;
  border-radius: 12rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

/* 空状态 */
.empty-recent {
  background: white;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  margin-bottom: 24rpx;
}

.empty-icon .icon-text {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}