/***********************************************
 * 首页现代深色主题样式
 * 玻璃拟态效果，渐变色彩，圆角设计
 ***********************************************/

/* 导入基础主题变量和动画 */
@import "../../styles/dark-theme.wxss";
@import "../../styles/animations.wxss";

/* 导航栏 */
.modern-nav {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid var(--border-color);
  padding: var(--spacing-lg) var(--spacing-xl);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200rpx;
  margin: 0 auto;
}

.nav-brand {
  font-size: var(--text-xl);
  font-weight: 700;
  letter-spacing: 1rpx;
}

.nav-actions {
  display: flex;
  gap: var(--spacing-lg);
}

.nav-link {
  color: var(--color-text-secondary);
  font-size: var(--text-base);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.nav-link:hover {
  color: var(--color-text-primary);
  background: rgba(255, 255, 255, 0.1);
}

/* Hero 区域 */
.hero-section {
  padding: var(--spacing-2xl) var(--spacing-xl);
  text-align: center;
  position: relative;
  z-index: 2;
}

.hero-content {
  max-width: 800rpx;
  margin: 0 auto;
}

.hero-title {
  font-size: 64rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
  letter-spacing: -1rpx;
  line-height: 1.2;
}

.hero-subtitle {
  font-size: var(--text-lg);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-2xl);
  font-weight: 400;
}

/* Hero 输入框 */
.hero-input-container {
  position: relative;
  max-width: 720rpx;
  margin: 0 auto;
}

.hero-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--color-bg-input);
  border-radius: var(--radius-xl);
  border: 1rpx solid var(--border-color);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  padding: var(--spacing-sm);
  box-shadow: var(--shadow-md);
}

.hero-input {
  flex: 1;
  background: transparent;
  border: none;
  color: var(--color-text-primary);
  font-size: var(--text-base);
  padding: var(--spacing-md) var(--spacing-lg);
  outline: none;
}

.input-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.mic-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: var(--radius-full);
  background: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.mic-icon:hover {
  background: rgba(255, 255, 255, 0.2);
}

.send-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--radius-full);
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.send-icon {
  font-size: 20rpx;
  margin-left: 2rpx;
}

/* 主要内容区域 */
.main-content {
  padding: 0 var(--spacing-xl);
  padding-bottom: 140rpx;
  position: relative;
  z-index: 2;
}

/* 用户统计卡片 */
.user-stats-card {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-xl);
}

.user-info-section {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.user-avatar-large {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-full);
  overflow: hidden;
  border: 3rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: var(--shadow-md);
}

.avatar-image-large {
  width: 100%;
  height: 100%;
}

.user-details-large {
  flex: 1;
}

.user-name-large {
  display: block;
  font-size: var(--text-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.user-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.user-level-badge {
  background: var(--gradient-primary);
  color: white;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-md);
  font-size: var(--text-xs);
  font-weight: 600;
}

/* 统计网格 */
.stats-grid-modern {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: var(--spacing-lg) 0;
  border-top: 1rpx solid var(--border-color);
}

.stat-item-modern {
  text-align: center;
  flex: 1;
}

.stat-number-modern {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label-modern {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  font-weight: 500;
}

.stat-divider-modern {
  width: 1rpx;
  height: 60rpx;
  background: var(--border-color);
}

/* 快速复习卡片 */
.quick-review-card {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-xl);
}

.review-header-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.review-title-modern {
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--color-text-primary);
}

.close-icon-modern {
  font-size: 32rpx;
  color: var(--color-text-secondary);
  padding: var(--spacing-xs);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.close-icon-modern:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--color-text-primary);
}

.memory-question-modern {
  background: rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.question-text-modern {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  line-height: 1.6;
}

.show-answer-btn-modern {
  width: 100%;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--text-base);
}

.answer-section-modern {
  animation: fadeIn 0.3s ease-out;
}

.memory-answer-modern {
  background: rgba(68, 209, 255, 0.1);
  border: 1rpx solid rgba(68, 209, 255, 0.3);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.answer-text-modern {
  font-size: var(--text-base);
  color: var(--color-text-primary);
  line-height: 1.6;
}

.difficulty-rating-modern {
  text-align: center;
}

.rating-label-modern {
  display: block;
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-md);
}

.rating-buttons-modern {
  display: flex;
  gap: var(--spacing-sm);
  justify-content: center;
}

.rating-btn-modern {
  flex: 1;
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  border: 1rpx solid var(--border-color);
  background: rgba(255, 255, 255, 0.05);
  color: var(--color-text-primary);
  font-size: var(--text-sm);
  transition: all 0.3s ease;
}

.rating-btn-modern:hover {
  background: rgba(255, 255, 255, 0.1);
}

.rating-easy {
  border-color: rgba(34, 197, 94, 0.5);
  color: #22c55e;
}

.rating-normal {
  border-color: rgba(234, 179, 8, 0.5);
  color: #eab308;
}

.rating-hard {
  border-color: rgba(239, 68, 68, 0.5);
  color: #ef4444;
}

/* 输入区域 */
.input-section-modern {
  margin-bottom: var(--spacing-xl);
}

.input-card-modern {
  padding: var(--spacing-xl);
}

.input-header-modern {
  margin-bottom: var(--spacing-lg);
}

.input-title-modern {
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--color-text-primary);
}

.memory-input-modern {
  width: 100%;
  min-height: 120rpx;
  margin-bottom: var(--spacing-lg);
  resize: vertical;
}

.input-actions-modern {
  display: flex;
  gap: var(--spacing-md);
}

.action-btn-modern {
  flex: 1;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--text-base);
}

.save-btn-modern {
  background: var(--gradient-primary);
}

.glass-btn {
  background: var(--glass-bg);
  border: 1rpx solid var(--glass-border);
  color: var(--color-text-primary);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.glass-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* 记忆辅助预览 */
.aids-preview-modern {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-xl);
}

.preview-header-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.preview-title-modern {
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--color-text-primary);
}

.aids-grid-modern {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120rpx, 1fr));
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.aid-item-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.aid-item-modern:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2rpx);
}

.aid-icon-modern {
  font-size: 40rpx;
  margin-bottom: var(--spacing-xs);
}

.aid-label-modern {
  font-size: var(--text-xs);
  color: var(--color-text-secondary);
  text-align: center;
}

.preview-tip-modern {
  text-align: center;
}

.tip-text-modern {
  font-size: var(--text-sm);
  color: var(--color-text-tertiary);
}

/* 功能卡片区域 */
.features-section-modern {
  margin-bottom: var(--spacing-xl);
}

.section-header-modern {
  margin-bottom: var(--spacing-lg);
}

.section-title-modern {
  font-size: var(--text-xl);
  font-weight: 600;
  color: var(--color-text-primary);
}

.features-grid-modern {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.feature-card-modern {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  transition: all 0.3s ease;
  cursor: pointer;
}

.feature-card-modern:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-glow);
}

.feature-icon-modern {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
}

.feature-info-modern {
  flex: 1;
}

.feature-title-modern {
  display: block;
  font-size: var(--text-lg);
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.feature-desc-modern {
  font-size: var(--text-sm);
  color: var(--color-text-secondary);
}

.feature-arrow-modern {
  font-size: 32rpx;
  color: var(--color-text-tertiary);
}

/* 动画效果 */
@keyframes fadeIn {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .hero-title {
    font-size: 48rpx;
  }
  
  .hero-input-wrapper {
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .input-actions {
    width: 100%;
  }
  
  .rating-buttons-modern {
    flex-direction: column;
  }
  
  .input-actions-modern {
    flex-direction: column;
  }
}