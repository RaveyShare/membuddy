/* pages/auth/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-top: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
}

.logo {
  margin-bottom: var(--spacing-md);
}

.logo-image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  padding: var(--spacing-sm);
}

.title {
  font-size: var(--text-2xl);
  font-weight: 700;
  color: white;
  margin-bottom: var(--spacing-xs);
}

.subtitle {
  font-size: var(--text-base);
  color: rgba(255, 255, 255, 0.8);
}

/* 登录区域 */
.login-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-card {
  background: white;
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  width: 100%;
  max-width: 400px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.card-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.card-title {
  display: block;
  font-size: var(--text-xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.card-subtitle {
  display: block;
  font-size: var(--text-sm);
  color: var(--text-secondary);
}

/* 登录方式 */
.login-methods {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.btn-wechat {
  background: #07c160;
  color: white;
}

.btn-wechat:disabled {
  background: #a0a0a0;
}

.btn-profile {
  background: var(--bg-secondary);
  color: var(--text-primary);
  border: 1px solid var(--border-color);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
}

.btn-icon {
  width: 20px;
  height: 20px;
}

.btn-text {
  font-size: var(--text-base);
  font-weight: 500;
}

/* 功能介绍 */
.features-section {
  margin-top: var(--spacing-xl);
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
}

.features-title {
  font-size: var(--text-lg);
  font-weight: 600;
  color: white;
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-md);
}

.feature-icon {
  font-size: var(--text-xl);
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  flex-shrink: 0;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: var(--text-base);
  font-weight: 600;
  color: white;
  margin-bottom: var(--spacing-xs);
}

.feature-desc {
  display: block;
  font-size: var(--text-sm);
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}

/* 底部信息 */
.footer {
  text-align: center;
  margin-top: var(--spacing-lg);
  padding: var(--spacing-md);
}

.footer-text {
  font-size: var(--text-xs);
  color: rgba(255, 255, 255, 0.7);
}

.footer-link {
  font-size: var(--text-xs);
  color: white;
  text-decoration: underline;
  margin: 0 var(--spacing-xs);
}