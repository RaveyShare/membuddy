/* pages/memory-library/index.wxss */

.memory-library-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
  color: #ffffff;
}

/* 导航栏 */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  padding-top: var(--status-bar-height, 44rpx);
}

.navbar-left {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-arrow-left {
  font-size: 48rpx;
  color: #00d4ff;
  font-weight: bold;
}

.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.navbar-right {
  width: 80rpx;
}

/* 统计卡片 */
.stats-container {
  padding: 140rpx 32rpx 32rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10px);
}

.stat-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.stat-content {
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #00d4ff;
}

/* 搜索和筛选 */
.search-filter-container {
  padding: 0 32rpx 32rpx;
}

.search-box {
  position: relative;
  margin-bottom: 24rpx;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.5);
  z-index: 1;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 0 24rpx 0 72rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.filter-row {
  display: flex;
  gap: 16rpx;
}

.filter-picker {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  height: 72rpx;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  padding: 0 24rpx;
}

.filter-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.filter-text {
  flex: 1;
  font-size: 26rpx;
  color: #ffffff;
}

.picker-arrow {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 记忆项目列表 */
.memory-items-container {
  padding: 0 32rpx 32rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 212, 255, 0.2);
  border-top: 4rpx solid #00d4ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.memory-items-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 记忆项目卡片 */
.memory-item-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.memory-item-card:active {
  transform: scale(0.98);
  border-color: rgba(0, 212, 255, 0.5);
}

.card-header {
  position: relative;
  padding: 32rpx 32rpx 0;
}

.card-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.card-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  line-height: 1.4;
  margin-right: 16rpx;
}

.star-icon {
  font-size: 32rpx;
}

.card-badges {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.difficulty-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.difficulty-easy {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
}

.difficulty-medium {
  background: rgba(234, 179, 8, 0.2);
  color: #eab308;
}

.difficulty-hard {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
}

.category-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.7);
}

.card-actions {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.more-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: bold;
}

.card-content {
  padding: 0 32rpx 32rpx;
}

.card-description {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 标签 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 6rpx 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 掌握度 */
.mastery-container {
  margin-bottom: 24rpx;
}

.mastery-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.mastery-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.mastery-value {
  font-size: 24rpx;
  font-weight: 600;
}

.mastery-high {
  color: #22c55e;
}

.mastery-medium {
  color: #eab308;
}

.mastery-low {
  color: #ef4444;
}

.mastery-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.mastery-progress {
  height: 100%;
  background: linear-gradient(90deg, #00d4ff 0%, #8b5cf6 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 复习信息 */
.review-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 24rpx;
}

.review-date {
  display: flex;
  align-items: center;
  color: #00d4ff;
}

.review-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.review-text {
  font-size: 24rpx;
}

.review-time {
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.6);
}

.time-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.time-text {
  font-size: 24rpx;
}

/* 操作按钮 */
.card-buttons {
  display: flex;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #00d4ff;
  color: #000000;
}

.btn-primary:active {
  background: #00b8e6;
}

.btn-secondary {
  background: transparent;
  color: #00d4ff;
  border: 1px solid #00d4ff;
}

.btn-secondary:active {
  background: rgba(0, 212, 255, 0.1);
}

/* 操作菜单 */
.action-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-menu {
  background: rgba(30, 30, 30, 0.95);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(20px);
  min-width: 320rpx;
  overflow: hidden;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  transition: background-color 0.2s ease;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.action-delete {
  color: #ef4444;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 500;
}