/***********************************************
 * 深色主题样式文件
 * 采用现代简约设计，玻璃拟态效果，圆角卡片
 ***********************************************/

/* 基础变量定义 */
:root {
  /* 颜色系统 */
  --color-bg-primary: #000000;
  --color-bg-secondary: #0A0A0A;
  --color-bg-tertiary: #141414;
  --color-bg-card: rgba(20, 20, 20, 0.8);
  --color-bg-input: rgba(30, 30, 30, 0.9);
  
  /* 渐变色彩 */
  --gradient-primary: linear-gradient(135deg, #44D1FF 0%, #4C7DFF 50%, #7A58FF 100%);
  --gradient-secondary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  --gradient-glass: linear-gradient(135deg, rgba(68, 209, 255, 0.1) 0%, rgba(122, 88, 255, 0.1) 100%);
  
  /* 文字颜色 */
  --color-text-primary: #FFFFFF;
  --color-text-secondary: #B3B3B3;
  --color-text-tertiary: #808080;
  --color-text-disabled: #666666;
  
  /* 边框和阴影 */
  --border-color: rgba(255, 255, 255, 0.1);
  --border-color-light: rgba(255, 255, 255, 0.05);
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  --shadow-glow: 0 0 40rpx rgba(68, 209, 255, 0.3);
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  --radius-full: 50%;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-2xl: 64rpx;
  
  /* 字体大小 */
  --text-xs: 20rpx;
  --text-sm: 24rpx;
  --text-base: 28rpx;
  --text-lg: 32rpx;
  --text-xl: 36rpx;
  --text-2xl: 40rpx;
  --text-3xl: 48rpx;
  --text-4xl: 56rpx;
  --text-5xl: 64rpx;
  
  /* 玻璃拟态效果 */
  --glass-bg: rgba(255, 255, 255, 0.05);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-backdrop: blur(20rpx);
}

/* 全局样式重置 */
page {
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 深色主题容器 */
.dark-container {
  background-color: var(--color-bg-primary);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.dark-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 20%, rgba(68, 209, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(122, 88, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 60%, rgba(124, 58, 237, 0.05) 0%, transparent 50%);
  z-index: -1;
  animation: backgroundPulse 8s ease-in-out infinite;
}

@keyframes backgroundPulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

/* 玻璃拟态卡片 */
.glass-card {
  background: var(--glass-bg);
  backdrop-filter: var(--glass-backdrop);
  -webkit-backdrop-filter: var(--glass-backdrop);
  border: 1rpx solid var(--glass-border);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  transition: all 0.3s ease;
}

.glass-card:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-glow);
}

/* 渐变按钮 */
.gradient-btn {
  background: var(--gradient-primary);
  border: none;
  border-radius: var(--radius-xl);
  color: var(--color-text-primary);
  font-weight: 600;
  font-size: var(--text-base);
  padding: var(--spacing-md) var(--spacing-xl);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.gradient-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.gradient-btn:hover::before {
  left: 100%;
}

.gradient-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.gradient-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 玻璃拟态输入框 */
.glass-input {
  background: var(--color-bg-input);
  border: 1rpx solid var(--border-color);
  border-radius: var(--radius-xl);
  color: var(--color-text-primary);
  font-size: var(--text-base);
  padding: var(--spacing-md) var(--spacing-lg);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.glass-input:focus {
  outline: none;
  border-color: rgba(68, 209, 255, 0.5);
  box-shadow: 0 0 0 2rpx rgba(68, 209, 255, 0.2), var(--shadow-md);
}

.glass-input::placeholder {
  color: var(--color-text-tertiary);
}

/* 现代标题样式 */
.modern-title {
  font-size: var(--text-4xl);
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  text-align: center;
  margin-bottom: var(--spacing-lg);
  letter-spacing: -1rpx;
}

.modern-subtitle {
  font-size: var(--text-lg);
  color: var(--color-text-secondary);
  text-align: center;
  margin-bottom: var(--spacing-2xl);
  font-weight: 400;
}

/* 圆角卡片网格 */
.card-grid {
  display: grid;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
}

.rounded-card {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-md);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.rounded-card:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-lg);
}

/* 现代导航栏 */
.modern-nav {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid var(--border-color);
  padding: var(--spacing-lg) var(--spacing-xl);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-brand {
  font-size: var(--text-xl);
  font-weight: 600;
  color: var(--color-text-primary);
  text-decoration: none;
}

/* 状态指示器 */
.status-badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: 500;
}

.status-online {
  background: rgba(34, 197, 94, 0.1);
  color: #22c55e;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.status-offline {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

/* 加载动画 */
.loading-shimmer {
  background: linear-gradient(90deg, var(--color-bg-tertiary) 25%, var(--color-bg-secondary) 50%, var(--color-bg-tertiary) 75%);
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .card-grid {
    grid-template-columns: 1fr;
  }
  
  .modern-title {
    font-size: var(--text-3xl);
  }
}

/* 深色主题滚动条 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: var(--color-bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: var(--border-color);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-tertiary);
}

/* 工具类 */
.text-gradient {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.bg-gradient {
  background: var(--gradient-primary);
}

.border-glow {
  border: 1rpx solid rgba(68, 209, 255, 0.3);
  box-shadow: 0 0 20rpx rgba(68, 209, 255, 0.2);
}

.pulse-animation {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}