  --theme-color-dark: var(--primary-600);
  --theme-bg: linear-gradient(135deg, var(--primary-500), var(--primary-600));
  --theme-shadow: 0 0 40rpx rgba(6, 182, 212, 0.3);
}

.theme-secondary {
  --theme-color: var(--secondary-500);
  --theme-color-light: var(--secondary-400);
  --theme-color-dark: var(--secondary-600);
  --theme-bg: linear-gradient(135deg, var(--secondary-500), var(--secondary-600));
  --theme-shadow: 0 0 40rpx rgba(168, 85, 247, 0.3);
}

.theme-success {
