  --bg-secondary: rgba(255, 255, 255, 0.05);
  --bg-card: rgba(255, 255, 255, 0.08);
  --bg-glass: rgba(255, 255, 255, 0.05);
  --bg-overlay: rgba(0, 0, 0, 0.5);
  
  /* 文本色 */
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.8);
  --text-muted: rgba(255, 255, 255, 0.6);
  --text-disabled: rgba(255, 255, 255, 0.4);
  
  /* 边框色 */
  --border-primary: rgba(255, 255, 255, 0.1);
  --border-secondary: rgba(255, 255, 255, 0.05);
  --border-focus: var(--primary-400);
  --border-error: var(--error-400);
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  --shadow-md: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  --shadow-lg: 0 16rpx 64rpx rgba(0, 0, 0, 0.2);
  --shadow-xl: 0 32rpx 128rpx rgba(0, 0, 0, 0.25);
  --shadow-glow: 0 0 40rpx rgba(34, 211, 238, 0.3);
  --shadow-glow-purple: 0 0 40rpx rgba(168, 85, 247, 0.3);
  
