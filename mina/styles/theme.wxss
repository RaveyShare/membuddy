}

.theme-warning {
  --theme-color: var(--warning-500);
  --theme-color-light: var(--warning-400);
  --theme-color-dark: var(--warning-600);
  --theme-bg: linear-gradient(135deg, var(--warning-500), var(--warning-600));
  --theme-shadow: 0 0 40rpx rgba(245, 158, 11, 0.3);
}

.theme-error {
  --theme-color: var(--error-500);
  --theme-color-light: var(--error-400);
  --theme-color-dark: var(--error-600);
  --theme-bg: linear-gradient(135deg, var(--error-500), var(--error-600));
  --theme-shadow: 0 0 40rpx rgba(239, 68, 68, 0.3);
}

