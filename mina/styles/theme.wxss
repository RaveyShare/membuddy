.border-default { border-color: var(--border); }
.border-light { border-color: var(--border-light); }
.border-primary { border-color: var(--primary-500); }
.border-secondary { border-color: var(--secondary-500); }
.border-success { border-color: var(--success-500); }
.border-warning { border-color: var(--warning-500); }
.border-error { border-color: var(--error-500); }

.shadow-default { box-shadow: var(--shadow-sm); }
.shadow-card { box-shadow: var(--shadow-md); }
.shadow-modal { box-shadow: var(--shadow-lg); }
.shadow-primary { box-shadow: 0 4rpx 12rpx rgba(var(--primary-500), 0.15); }
.shadow-secondary { box-shadow: 0 4rpx 12rpx rgba(var(--secondary-500), 0.15); }
.shadow-success { box-shadow: 0 4rpx 12rpx rgba(34, 197, 94, 0.15); }
.shadow-warning { box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.15); }
.shadow-error { box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.15); }

/* ===== 状态样式 ===== */
.hover-bg-primary:hover { background-color: var(--primary-600); }
.hover-bg-secondary:hover { background-color: var(--secondary-600); }
.hover-bg-success:hover { background-color: var(--success-600); }
.hover-bg-warning:hover { background-color: var(--warning-600); }
.hover-bg-error:hover { background-color: var(--error-600); }

.hover-text-primary:hover { color: var(--primary-600); }
.hover-text-secondary:hover { color: var(--secondary-600); }
.hover-text-success:hover { color: var(--success-600); }
.hover-text-warning:hover { color: var(--warning-600); }
.hover-text-error:hover { color: var(--error-600); }

.focus-ring-primary:focus { box-shadow: 0 0 0 6rpx rgba(var(--primary-500), 0.2); }
.focus-ring-secondary:focus { box-shadow: 0 0 0 6rpx rgba(var(--secondary-500), 0.2); }
.focus-ring-success:focus { box-shadow: 0 0 0 6rpx rgba(34, 197, 94, 0.2); }
.focus-ring-warning:focus { box-shadow: 0 0 0 6rpx rgba(245, 158, 11, 0.2); }
.focus-ring-error:focus { box-shadow: 0 0 0 6rpx rgba(239, 68, 68, 0.2); }

.active-bg-primary:active { background-color: var(--primary-700); }
.active-bg-secondary:active { background-color: var(--secondary-700); }
.active-bg-success:active { background-color: var(--success-700); }
.active-bg-warning:active { background-color: var(--warning-700); }
.active-bg-error:active { background-color: var(--error-700); }

.disabled-opacity-50:disabled { opacity: 0.5; }
.disabled-cursor-not-allowed:disabled { cursor: not-allowed; }
.disabled-pointer-events-none:disabled { pointer-events: none; }

/* ===== 组件变体 ===== */
.variant-filled {
  background-color: var(--primary-500);
  color: var(--primary-50);
  border: none;
}

.variant-outlined {
  background-color: transparent;
  color: var(--primary-500);
  border: 2rpx solid var(--primary-500);
}

.variant-text {
  background-color: transparent;
  color: var(--primary-500);
  border: none;
}

.variant-ghost {
  background-color: transparent;
  color: var(--text-primary);
  border: 2rpx solid var(--border);
}

.variant-soft {
  background-color: var(--primary-100);
  color: var(--primary-700);
  border: none;
}

/* ===== 尺寸变体 ===== */
.size-xs {
  padding: 8rpx 16rpx;
  font-size: var(--text-xs);
  border-radius: var(--radius-sm);
}

.size-sm {
  padding: 12rpx 24rpx;
  font-size: var(--text-sm);
  border-radius: var(--radius-md);
}

.size-md {
  padding: 16rpx 32rpx;
  font-size: var(--text-base);
  border-radius: var(--radius-md);
}

.size-lg {
  padding: 20rpx 40rpx;
  font-size: var(--text-lg);
  border-radius: var(--radius-lg);
}

.size-xl {
  padding: 24rpx 48rpx;
  font-size: var(--text-xl);
  border-radius: var(--radius-lg);
}

/* ===== 实用工具类 ===== */
/* 使用CSS变量的工具类 */
.text-theme { color: var(--theme-color); }
.bg-theme { background: var(--theme-bg); }
.border-theme { border-color: var(--theme-color); }
.shadow-theme { box-shadow: var(--theme-shadow); }

.bg-card { background: var(--bg-card); }
.bg-glass { background: var(--bg-glass); }
.bg-overlay { background: var(--bg-overlay); }

.border-focus { border-color: var(--border-focus); }
.border-error { border-color: var(--border-error); }

.shadow-theme-sm { box-shadow: var(--shadow-sm); }
.shadow-theme-md { box-shadow: var(--shadow-md); }
.shadow-theme-lg { box-shadow: var(--shadow-lg); }
.shadow-theme-xl { box-shadow: var(--shadow-xl); }
.shadow-glow { box-shadow: var(--shadow-glow); }
.shadow-glow-purple { box-shadow: var(--shadow-glow-purple); }