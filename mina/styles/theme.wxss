  --radius-md: 8rpx;
  --radius-lg: 12rpx;
  --radius-xl: 16rpx;
  --radius-2xl: 24rpx;
  --radius-3xl: 32rpx;
  --radius-full: 9999rpx;
  
  /* 间距 */
