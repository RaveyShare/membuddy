/* ===== 主题应用类 ===== */
.bg-theme {
  background: var(--theme-bg);
}

.text-theme {
  color: var(--theme-color);
}

.border-theme {
  border-color: var(--theme-color);
}

.shadow-theme {
  box-shadow: var(--theme-shadow);
}

/* 渐变背景 */
.bg-gradient-primary {
  background: linear-gradient(135deg, var(--primary-500), var(--secondary-500));
}

.bg-gradient-success {
  background: linear-gradient(135deg, var(--success-500), var(--success-600));
}

.bg-gradient-warning {
  background: linear-gradient(135deg, var(--warning-500), var(--orange-500));
}

.bg-gradient-error {
  background: linear-gradient(135deg, var(--error-500), var(--error-600));
}

/* ===== 组件主题类 ===== */
/* 按钮主题 */
.btn-theme {
  background: var(--theme-bg);
  color: white;
  border: none;
  box-shadow: var(--theme-shadow);
  transition: all var(--transition-normal);
}

.btn-theme:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--theme-shadow), var(--shadow-lg);
}

.btn-theme:active {
  transform: translateY(0);
}

/* 卡片主题 */
.card-theme {
  background: var(--bg-card);
  border: 1px solid var(--border-primary);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-normal);
}

.card-theme:hover {
  border-color: var(--theme-color);
  box-shadow: var(--shadow-lg), var(--theme-shadow);
}

/* 输入框主题 */
.input-theme {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
  transition: all var(--transition-normal);
}

.input-theme:focus {
  border-color: var(--theme-color);
  box-shadow: 0 0 0 3rpx rgba(var(--theme-color), 0.1);
  outline: none;
}

.input-theme::placeholder {
  color: var(--text-muted);
}

/* ===== 动画类 ===== */
/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* 缩放动画 */
@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-scale-in {
  animation: scaleIn 0.2s ease-out;
}

/* 滑入动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-in-up {
  animation: slideInUp 0.3s ease-out;
}

@keyframes slideInDown {
  from {
    opacity: 0;
    transform: translateY(-100%);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-in-down {
  animation: slideInDown 0.3s ease-out;
}

/* 旋转动画 */
@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.animate-spin {
  animation: spin 1s linear infinite;
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* 弹跳动画 */
@keyframes bounce {
  0%, 100% {
    transform: translateY(-25%);
    animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
  }
  50% {
    transform: translateY(0);
    animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
  }
}

.animate-bounce {
  animation: bounce 1s infinite;
}

/* 摇摆动画 */
@keyframes wiggle {
  0%, 100% {
    transform: rotate(-3deg);
  }
  50% {
    transform: rotate(3deg);
  }
}

.animate-wiggle {
  animation: wiggle 1s ease-in-out infinite;
}

/* 光晕动画 */
@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 20rpx var(--theme-color);
  }
  50% {
    box-shadow: 0 0 40rpx var(--theme-color), 0 0 60rpx var(--theme-color);
  }
}

.animate-glow {
  animation: glow 2s ease-in-out infinite;
}

